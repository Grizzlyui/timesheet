<% layout('layouts/boilerplate') %>
<body>
    <div class="col-9 border px-5 shadow p-3 mb-5 bg-body rounded">
      <div class="d-flex justify-content-between align-items-end mt-4 mb-5">
        <h1 class="fs-2">TIMESHEET</h1>
        <h2 class="fs-3">cnr.Architects</h2>
      </div>      
      <div class="mb-4">
        <h3 class="fs-5 fw-normal">Name: variable</h3>
        <h3 class="fs-5 fw-normal">Month: <%=timesheet.month%></h3>
      </div>
      <div class='mb-12'>
        <div class="container">
          <div class="row">
            <div class="col border">
              <h5 class="mt-2">DATE</h5>
            </div>
            <div class="col-6 border">
              <h5 class="mt-2">DESCRIPTION</h5>
            </div>
            <div class="col border">
              <h5 class="mt-2">PROJECT</h5>
            </div>
          </div>        
        </div>
          <% for(let submission of timesheet.submissions) { %>
              <div class="container">
                  <div class="row">
                    <div class="col border">
                      <%=submission.day %>
                    </div>
                    <div class="col-6 border">
                      <a href="/timesheets/<%=timesheet._id%>/submissions/<%=submission._id%>/edit" class="text-decoration-none"><%=submission.description%></a>                      
                    </div>
                    <div class="col border">
                      <%=submission.project%>
                    </div>
                  </div>        
                </div>
          <% } %>
      </div>
      <form action="/timesheets/<%=timesheet._id%>/submissions/new" class="mt-3 mb-4">
        <button class="btn btn-sm btn-success">New</button>
      </form>
    </div>
