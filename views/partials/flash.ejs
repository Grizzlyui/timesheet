<% if(success && success.length) { %>
    <div class="alert alert-success alert-dismissable fade show d-flex justify-content-between shadow p-3 mb-5 bg-body rounded" role="alert">
        <%=success%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(error && error.length) { %>
    <div class="alert alert-danger alert-dismissable fade show d-flex justify-content-between shadow p-3 mb-5 bg-body rounded" role="alert">
        <%=error%>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
